@model List<Kitap>
@{
    ViewData["Title"] = "Home Page";
}


<h1 class="display-6">Kitap Listesi</h1>
<hr>
<a asp-controller="Home" asp-action="KitapEkle" class="btn btn-outline-primary">Yeni Kitap</a>
<hr>
<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kategori Adı</th>
            <th>Açıklama</th>
            <th width="135">İşlemler</th>
        </tr>
    </thead>
    <hr> 
  <div class="container">
   <div class="row">
        @foreach (var kitap in Model)
        {
            <partial name="_Kitap" model="kitap" />
        }
    </div> 
</div> 
