@model List<Kitap>
@{
    ViewData["Title"] = "Kitap Listesi";
}

<h1 class="display-6">Kitap Listesi</h1>
<hr>
<a asp-controller="Home" asp-action="KitapEkle" class="btn btn-outline-primary">Yeni Kitap</a>
<hr>
<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kategori Adı</th>
            <th>Açıklama</th>
            <th width="135">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.Id</td>
                <td><a asp-controller="Home" asp-action="KitapListesi" asp-route-id=@k.Id>@k.Ad</a></td>
                <td>@k.Ozet</td>
                <td>
                    
                    <a class="btn btn-sm btn-warning me-2" asp-controller="Home" asp-action="KitapDuzenle" asp-route-id=@k.Id>Düzenle</a>
                    <a class="btn btn-sm btn-danger me-2" asp-controller="Home" asp-action="KitapSil" asp-route-id=@k.Id>Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
