@using ShoppingApp.Web.Models.Dtos
@model ProductDetailsDto

<div class="card mb-3 mt-5">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="/images/@Model.ImageUrl" class="img-fluid rounded-start m-5 alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body m-5">
                <h5 class="card-title">@Model.Name</h5>
                 @foreach (var category in Model.Categories)
                {
                    <a href="#" class="btn btn-link p-0 mb-3">@category.Name</a>
                }
                <p class="card-text">@Model.Description</p>
                <p class="card-text">@Model.Price</p>
                <button type="submit" class="btn btn-sm btn-primary">Sepete Ekle</button>
                <button type="submit" class="btn btn-sm btn-dark">Favorilere Ekle</button>

            </div>
        </div>
    </div>
</div>
            
               
               
