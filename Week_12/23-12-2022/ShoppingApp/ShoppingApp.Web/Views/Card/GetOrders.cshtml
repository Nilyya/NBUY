@model List<OrderListDto>
<h6 class="display-6">Şiparişlerim</h6>
<hr />
<table class="table table-bordered table-sm">
    <thead>
        <tr>
            <th>Şipariş No</th>
            <th>Tarih</th>
            <th>Toplam</th>
            <th>Sipariş Detayı</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>               
                <td>@order.OrderNumber</td>
                <td>@order.OrderDate</td>
                <td>@order.TotalPrice()</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-primary">Detay Göster</a>
                </td>
            </tr>
        }
    </tbody>
</table>