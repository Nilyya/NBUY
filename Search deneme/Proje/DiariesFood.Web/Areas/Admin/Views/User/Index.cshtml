@using DiariesFood.Core
@using DiariesFood.Web.Admin.Models.Dtos
@model List<UserDto>
<hr />
<a class="btn btn-outline-primary"
   asp-area="Admin"
   asp-controller="User"
   asp-action="Create">Kullanıcı Ekle</a>
<hr />
<table class="table table-primary table-bordered">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            <th>Onaylı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.EmailConfirmed</td>
                    <td>
                        <a class="btn btn-warning btn-sm"
                   asp-area="Admin"
                   asp-controller="User"
                   asp-action="Edit"
                   asp-route-id=@user.Id>Düzenle</a>

                        <a class="btn btn-danger btn-sm"
                   asp-area="Admin"
                   asp-controller="User"
                   asp-action="Delete"
                   asp-route-id=@user.Id>Sil</a>
                    </td>
                </tr>
            }
        }
        else
        {
            TempData["Message"] = Jobs.PushMessage("Bilgi", "Kayıtlı bir rol bulunmamaktadır.", "warning");
        }
    </tbody>
</table>