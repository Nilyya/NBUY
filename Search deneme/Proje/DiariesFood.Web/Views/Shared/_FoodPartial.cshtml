@using DiariesFood.Web.Models.Dtos
@model FoodDto
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" />
<style>
    .ımage {
        width: 80%;
        height: 20%;
    }
</style>

<div class="row">
    <div class="col-md-3">
        <div class="card mb-3" style="width: 17rem; height:20rem;">
            <img src="/images/@Model.ImageUrl" class="card-img-top" style="width:100%; height:150px;">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>           
                <a class="btn btn-sm m-2 text-black" 
                asp-controller="Food" asp-action="FoodDetails" asp-route-foodurl=@Model.Url><i class="fa-solid fa-pen-to-square"></i>  Tarif Detayları</a>
                <form asp-controller="Favorite"asp-action="AddToFavorite" method="post">
                    <input type="hidden" name="foodId" value="@Model.Id" />
                    <input type="hidden" name="favortiteNumber" value="1" />
                    <button type="submit" class="btn btn-danger btn-sm m-2"><i class="fa-regular fa-heart"></i>  Favorilere ekle</button>
                </form>
            </div>
        </div>
    </div>
</div>
