@using DiariesFoodApp.Entity.Concrete
@model List<Category>

<ul class="list-group list-group-horizontal mt-2 border border-danger justify-content-center mb-2">
    <li class="list-group-item me-3">
        <a class="list-group-item-action @(ViewBag.SelectedCategory ==null ? "active" : "")"
           asp-controller="Product"
           asp-action="ProductList"
           asp-route-categoryurl="">Tümünü göster</a>
    </li>
    <li class="list-group-item ms-3">
        @foreach (var category in Model)
        {
            <a class="list-group-item-action ms-5 @(ViewBag.SelectedCategory ==category.Url ? "active" : "")"
           asp-controller="Product"
           asp-action="ProductList"
           asp-route-categoryurl="@category.Url">@category.Name</a>
        }
    </li>

</ul>
