@model List<Country>
@{
    ViewData["Title"] = "Home Page";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <td>Ülke</td>
            <td>Başkent</td>
            <td>Bayrak</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var country in Model)
        {
           <tr>
                <td>@country.name</td>
                <td>@country.capital</td>
                <td>
                    <img src="@country.flag" width="200" />
                </td>
           </tr> 
        }
    </tbody>
</table>
