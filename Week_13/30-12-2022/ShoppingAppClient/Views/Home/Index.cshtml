@model List<ProductViewModel>
@{
    ViewData["Title"] = "Home Page";
}
<h1 class="display-6">Ürün Listesi</h1>
<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Resim</th>
            <th>Adı</th>
            <th>Fiyatı</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td><img src="http://localhost:5200/images/@product.ImageUrl" width="50"/></td>
                <td>@product.Name</td>
                <td>@($"{product.Price:C0}")</td>
                <td><a class="btn btn-sm btn-warning" asp-action="Details" asp-route-id=@product.Id>Detay</a></td>
            </tr>
        }
    </tbody>
</table>