@using DiariesFoodApp.Web.Models.Dtos
@model List<ProductDto>


<div class="row">
    <div class="col-12 mb-2">
        @await Component.InvokeAsync("Categories")
    </div>


    <div class="text-center">
        <h1 class="display-6 text-danger fw-bold">Tarifler</h1>
    </div>
    <div class="mt-4">
        <div class="row">
            @foreach (var productDto in Model)
            {
                <div class="col-3" style="width: 25rem; height:15rem;">
                    @await Html.PartialAsync("_ProductPartial", productDto)
                </div>
            }
        </div>
    </div>
</div>