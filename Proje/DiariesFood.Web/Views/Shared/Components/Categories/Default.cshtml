@using DiariesFood.Entity.Concrete
@model List<Category>
<style>
    .renk {
        background-color: #2222;
    }
</style>

<div class="btn-group">
    <button type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
        Kategoriler
    </button>
    <ul class="dropdown-menu">
        <li>
            <a class="dropdown-item" href="#">
              
                        <div class="list-group">
                            <a class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==null ? "active" : "")"
                               asp-controller="Food"
                               asp-action="FoodList"
                               asp-route-categoryurl="">Tümü</a>
                            @foreach (var category in Model)
                            {
                                <a class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==category.Url ? "active" : "")"
                               asp-controller="Food"
                               asp-action="FoodList"
                               asp-route-categoryurl=@category.Url>@category.Name</a>
                            }
                        </div>               
            </a>
        </li>     
    </ul>
</div>


