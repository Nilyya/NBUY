<h1 class="mt-2 text-center" style="color:black">Şifremi Unuttum</h1>
<style>
    .colArkaPlan {
        background-color: gray;      
        border-radius: 20px;
        height: 200px;
        box-shadow: 5px 10px #2236;
    }

    .renk {
        color: white;
        background-color: #2236;
    }

    .input {
        border: 1px solid #2236;
        border-radius: 10px;
    }
</style>

<body>
    <form class="mt-3" style="height:270px;" asp-controller="Account"
          asp-action="ForgotPas"
          method="post">

        <div class="row d-flex justify-content-center">            
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-3">
                    <label class="form-label text-white">Email adresini giriniz.</label>
                    <input class="form-control input" name="email" type="email">
                </div>

            <div>
                <button type="submit" class="btn renk input">Şifre sıfırlama</button>

                <a type="button" class="btn btn-light text-white input" style="background-color:#2227"
                   asp-controller="Home"
                   asp-action="Index">Vazgeç</a>
            </div>
        </div>
    </form>

</body>